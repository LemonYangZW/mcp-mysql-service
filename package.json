{
  "name": "mcp-mysql-service",
  "version": "1.0.3",
  "description": "MCP (Model Context Protocol) MySQL服务，用于在ClaudeCode环境下快速查询MySQL数据库结构和数据分析",
  "main": "dist/index.js",
  "bin": {
    "mcp-mysql-service": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest tests/security",
    "test:performance": "jest tests/performance",
    "test:basic": "jest tests/basic.test.ts",
    "test:all": "jest --testTimeout=60000",
    "test:connection": "tsx scripts/test-connection.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "check:type": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "prestart": "npm run build",
    "docker:build": "docker build -t mcp-mysql-service .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "health-check": "node scripts/health-check.js"
  },
  "keywords": [
    "mcp",
    "mysql",
    "claude",
    "claudecode",
    "database",
    "query",
    "analysis",
    "typescript",
    "model-context-protocol",
    "database-tools",
    "development-tools"
  ],
  "author": "WMS Cloud Team <team@wms-cloud.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LemonYangZW/mcp-mysql-service.git"
  },
  "homepage": "https://github.com/LemonYangZW/mcp-mysql-service#readme",
  "bugs": {
    "url": "https://github.com/LemonYangZW/mcp-mysql-service/issues"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "config/default.json",
    ".env.example",
    "tsconfig.json"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "dotenv": "^16.4.5",
    "lodash": "^4.17.21",
    "mysql2": "^3.11.4",
    "winston": "^3.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "jest-extended": "^6.0.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "testcontainers": "^10.13.2",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "warn"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  }
}
